html(lang="en")
	head
		meta(charset='ISO-8859-1')
		meta(http-equiv="X-UA-Compatible", content="IE=edge")
		meta(name="viewport", content="width=device-width, initial-scale=1")
		meta(name="description", content="")
		meta(name="author", content="")
		link(rel="shortcut icon", href="http://getbootstrap.com/assets/ico/favicon.ico")
		
		script(src="../javascripts/jquery.js")
		script(src="../javascripts/game.js")
		script(src="/socket.io/socket.io.js")
		
		block scripts
		
		title Game Page
		
		link(href="../stylesheets/bootstrap.min.css", rel="stylesheet")
		link(href="../stylesheets/justified-nav.css" rel="stylesheet")
		link(href="stylesheets/signin.css" rel="stylesheet")
		
		block topMenu
			-var selected = 'Home';

		-var menu = { 'Home': '/game/index', 'Resources': '/game/resources', 'Buildings': '/game/buildings', 'Mercenaries': '/game/mercenaries', 'Empire': '/game/empire'};
	
	body
		a(target="_blank" href='https://github.com/Neoares/TFG_Neoares2014')
			img(style="position: absolute; top: 0; right: 0; border: 0;" src="https://camo.githubusercontent.com/652c5b9acfaddf3a9c326fa6bde407b87f7be0f4/68747470733a2f2f73332e616d617a6f6e6177732e636f6d2f6769746875622f726962626f6e732f666f726b6d655f72696768745f6f72616e67655f6666373630302e706e67" alt="Fork me on GitHub" data-canonical-src="https://s3.amazonaws.com/github/ribbons/forkme_right_orange_ff7600.png")
		.container
			.masthead
				.topInfo
					table(style="width:100%")
						tr
							td(colspan="2")
								h3(class="text-muted")
									| Hi, #{username}. &nbsp; &nbsp;
									a.btn.btn-default(href="/logout") Logout
									| &nbsp; &nbsp;
							td(colspan="2")
								img.border(src="../../images/resources/wood.png" alt="wood_res" width="50" height="40")
							td
								#wood
									p #{resources.wood}
								p #{doc.resourcesPerHour.woodPerHour} /h &nbsp; &nbsp;
								
							td(colspan="2")
								img.border(src="../../images/resources/stone.png" alt="stone_res" width="50" height="40")
							td
								#stone
									p #{resources.stone}
								p #{doc.resourcesPerHour.stonePerHour} /h &nbsp; &nbsp;
								
							td(colspan="2")
								img.border(src="../../images/resources/iron.png" alt="iron_res" width="50" height="40")
							td
								#iron
									p #{resources.iron}
								p #{doc.resourcesPerHour.ironPerHour} /h &nbsp; &nbsp;
								
							td(colspan="2")
								img.border(src="../../images/resources/cereal.png" alt="cereal_res" width="50" height="40")
							td
								p Total: #{resources.cereal} &nbsp; &nbsp;
								if(doc.cerealAvailable < 0)
									p.red Available: #{doc.cerealAvailable} &nbsp; &nbsp;
								else
									p Available: #{doc.cerealAvailable} &nbsp; &nbsp;
							
							td
								h3(class="text-muted") &nbsp; &nbsp; Score: #{Math.floor(doc.score)}
								
				ul.nav.nav-justified
					each val, key in menu
						if selected == key
							li.active
								a(href=val)= key
						else
							li
								a(href=val)= key
				#date(style='height:30px;')
				#notifications
	
			
			block content
			
			.footer
				p Created by 
					a(target="_blank" href="https://github.com/Neoares") @Neoares
			