html(lang="en")
	head
		meta(charset='ISO-8859-1')
		meta(http-equiv="X-UA-Compatible", content="IE=edge")
		meta(name="viewport", content="width=device-width, initial-scale=1")
		meta(name="description", content="")
		meta(name="author", content="")
		link(rel="shortcut icon", href="http://getbootstrap.com/assets/ico/favicon.ico")
		
		script(src="../javascripts/jquery.js")
		
		block scripts
		
		title Game Page
		
		link(href="stylesheets/bootstrap.min.css", rel="stylesheet")
		link(href="stylesheets/justified-nav.css" rel="stylesheet")
		link(href="stylesheets/signin.css" rel="stylesheet")
		
		block topMenu
			-var selected = 'Home';

		-var menu = { 'Home': '/', 'Sign Up': '/signUp', 'Game Guide': '#', 'Forum': '#', 'About': '#', 'Contact': '#' };
		
	
	body
		a(target="_blank" href='https://github.com/Neoares/TFG_Neoares2014')
			img(style="position: absolute; top: 0; right: 0; border: 0;" src="https://camo.githubusercontent.com/652c5b9acfaddf3a9c326fa6bde407b87f7be0f4/68747470733a2f2f73332e616d617a6f6e6177732e636f6d2f6769746875622f726962626f6e732f666f726b6d655f72696768745f6f72616e67655f6666373630302e706e67" alt="Fork me on GitHub" data-canonical-src="https://s3.amazonaws.com/github/ribbons/forkme_right_orange_ff7600.png")
		.container
			.masthead
				h3(class="text-muted") MMO Realtime Node.js + Websockets
				ul.nav.nav-justified
					each val, key in menu
						if selected == key
							li.active
								a(href=val)= key
						else
							li
								a(href=val)= key
			block content
			
			.footer
				p Created by 
					a(target="_blank" href="https://github.com/Neoares") @Neoares